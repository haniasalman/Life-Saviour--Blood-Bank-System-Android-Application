<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/cardview_dark_background"/>

        <TextView
            android:id="@+id/reqstUser"
            android:text="Requested by:"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/cardview_light_background"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Details: "
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"/>
                            <TextView
                                android:id="@+id/reqstDetails"
                                android:text=" I need blood because"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="17sp"/>
                </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EAEAEA">

                    <TextView
                        android:id="@+id/reqstBG"
                        android:text="BG+"
                        android:textStyle="bold"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:textColor="@color/colorPrimary"
                        android:textSize="22sp"
                        android:gravity="center"
                        android:padding="7dp"/>

            <LinearLayout
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                            android:layout_gravity="center"
                            android:padding="5dp"
                            app:srcCompat="@drawable/ic_priority_high_black_24dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/targetBG"
                        android:text="BU"
                        android:textSize="17sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" Blood Units"
                        android:textSize="17sp"/>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_gravity="center"
                        android:padding="5dp"
                        app:srcCompat="@drawable/ic_location_on_black_24dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/reqstLocation"
                        android:text="Location"
                        android:textSize="17sp"/>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_gravity="center"
                        android:padding="5dp"
                        app:srcCompat="@drawable/ic_phone_black_24dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/targetCN"
                        android:text="Contact_No"
                        android:textSize="17sp"/>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_gravity="center"
                        android:padding="5dp"
                        app:srcCompat="@drawable/ic_date_range_black_24dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/posted_date"
                        android:text="Posted Date"
                        android:textSize="17sp"/>


                </LinearLayout>


            </LinearLayout>

            <ImageButton
                android:id="@+id/call_button"
                android:background="@color/colorPrimaryDark"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:textColor="@color/colorPrimary"
                android:gravity="center_horizontal"
                android:padding="7dp"
                app:srcCompat="@drawable/ic_phone_in_talk_black_24dp" />


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/cardview_dark_background"
            />

        </LinearLayout>



</RelativeLayout>
